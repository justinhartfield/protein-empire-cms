{
  "kind": "collectionType",
  "collectionName": "goals",
  "info": {
    "singularName": "goal",
    "pluralName": "goals",
    "displayName": "Goal",
    "description": "User goals for recipe filtering (e.g., muscle gain, weight loss)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "string"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "recipes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::recipe.recipe",
      "inversedBy": "goals"
    }
  }
}
